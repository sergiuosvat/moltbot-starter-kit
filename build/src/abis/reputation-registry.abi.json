{
    "name": "ReputationRegistry",
    "constructor": {
        "inputs": [
            {
                "name": "validation_contract_address",
                "type": "Address"
            },
            {
                "name": "identity_contract_address",
                "type": "Address"
            }
        ],
        "outputs": []
    },
    "upgradeConstructor": {
        "inputs": [],
        "outputs": []
    },
    "endpoints": [
        {
            "docs": [
                "Submit feedback for a job. Caller must be the employer who created the job.",
                "Job must have a validation response recorded (no pre-authorization needed)."
            ],
            "name": "submit_feedback",
            "mutability": "mutable",
            "inputs": [
                {
                    "name": "job_id",
                    "type": "bytes"
                },
                {
                    "name": "agent_nonce",
                    "type": "u64"
                },
                {
                    "name": "rating",
                    "type": "BigUint"
                }
            ],
            "outputs": []
        },
        {
            "docs": [
                "ERC-8004: Anyone can append a response to feedback (e.g., agent showing refund,",
                "data aggregator tagging feedback as spam)."
            ],
            "name": "append_response",
            "mutability": "mutable",
            "inputs": [
                {
                    "name": "job_id",
                    "type": "bytes"
                },
                {
                    "name": "response_uri",
                    "type": "bytes"
                }
            ],
            "outputs": []
        },
        {
            "name": "get_reputation_score",
            "mutability": "readonly",
            "inputs": [
                {
                    "name": "agent_nonce",
                    "type": "u64"
                }
            ],
            "outputs": [
                {
                    "type": "BigUint"
                }
            ]
        },
        {
            "name": "get_total_jobs",
            "mutability": "readonly",
            "inputs": [
                {
                    "name": "agent_nonce",
                    "type": "u64"
                }
            ],
            "outputs": [
                {
                    "type": "u64"
                }
            ]
        },
        {
            "name": "get_validation_contract_address",
            "mutability": "readonly",
            "inputs": [],
            "outputs": [
                {
                    "type": "Address"
                }
            ]
        },
        {
            "name": "get_identity_contract_address",
            "mutability": "readonly",
            "inputs": [],
            "outputs": [
                {
                    "type": "Address"
                }
            ]
        },
        {
            "name": "has_given_feedback",
            "mutability": "readonly",
            "inputs": [
                {
                    "name": "job_id",
                    "type": "bytes"
                }
            ],
            "outputs": [
                {
                    "type": "bool"
                }
            ]
        },
        {
            "name": "get_agent_response",
            "mutability": "readonly",
            "inputs": [
                {
                    "name": "job_id",
                    "type": "bytes"
                }
            ],
            "outputs": [
                {
                    "type": "bytes"
                }
            ]
        },
        {
            "name": "set_identity_contract_address",
            "onlyOwner": true,
            "mutability": "mutable",
            "inputs": [
                {
                    "name": "address",
                    "type": "Address"
                }
            ],
            "outputs": []
        },
        {
            "name": "set_validation_contract_address",
            "onlyOwner": true,
            "mutability": "mutable",
            "inputs": [
                {
                    "name": "address",
                    "type": "Address"
                }
            ],
            "outputs": []
        }
    ],
    "events": [
        {
            "identifier": "reputationUpdated",
            "inputs": [
                {
                    "name": "agent_nonce",
                    "type": "u64",
                    "indexed": true
                },
                {
                    "name": "new_score",
                    "type": "BigUint"
                }
            ]
        }
    ],
    "esdtAttributes": [],
    "hasCallback": false,
    "types": {}
}
